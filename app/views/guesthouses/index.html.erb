<h1>My Guesthouse</h1>

<% if @guesthouses.any? %>
  <% @guesthouses.each do |g| %>
    <dl>  
      <strong><dt>Brand Name</dt></strong>
      <dd><%= g.brand_name %></dd>  

      <strong><dt>Corporate Name</dt></strong>
      <dd><%= g.corporate_name %></dd>  

      <strong><dt>Register Number</dt></strong>
      <dd><%= g.register_number %></dd>  

      <strong><dt>Phone Number</dt></strong>
      <dd><%= g.phone_number %></dd>  

      <strong><dt>Email</dt></strong>
      <dd><%= g.email %></dd>  

      <strong><dt>Full Address</dt></strong>
      <dd>
        <%= g.full_address.address %>, <%= g.full_address.number %> - <%= g.full_address.neighborhood %> -
        <%= g.full_address.city %> - <%= g.full_address.state %> - Zip Code: <%= g.full_address.zip_code %> -
        Complement: <%= g.full_address.complement %>
      </dd>  

      <strong><dt>Payment Methods</dt></strong>
      <dd><%= g.payment_method.name %></dd>  

      <strong><dt>Pet Friendly</dt></strong>
      <dd><%= g.pet_friendly %></dd>  

      <strong><dt>Check in Time</dt></strong>
      <dd><%= g.check_in_time %></dd>  

      <strong><dt>Check out Time</dt></strong>
      <dd><%= g.check_out_time %></dd>  

      <strong><dt>Description</dt></strong>
      <dd><%= g.description %></dd>  

      <strong><dt>Terms</dt></strong>
      <dd><%= g.terms %></dd>  

      <strong><dt>Status</dt></strong>
      <dd><%= g.status %></dd>  
    </dl>
  <% end %>
<% else %>
  <p>There is no registered guesthouse</p>
  <p><%= link_to 'Register Your Guesthouse', new_guesthouse_path %></p>
<% end %>

