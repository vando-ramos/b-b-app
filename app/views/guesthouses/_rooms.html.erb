<% @rooms.each do |r| %>
  <div>
    <h3><%= r.name %></h3>
    <div  style='border: 1px solid'>
      <dl>
        <strong><dt>Description</dt></strong>
        <dd><%= r.description %></dd>

        <strong><dt>Maximum Guests</dt></strong>
        <dd><%= r.maximum_guests %></dd>

        <strong><dt>Dimension</dt></strong>
        <dd><%= r.dimension %></dd>

        <strong><dt>Amenities</dt></strong>
        <% r.amenities.each do |a| %>
          <dd><%= a.name %></dd>
        <% end %>

        <strong><dt>Daily Price</dt></strong>
        <dd>$<%= r.daily_price %></dd>

        <strong><dt>Status</dt></strong>
        <dd><%= r.status %></dd>

        <strong><dt>Custom Price</dt></strong>
        <dd>           
          De <%= r.custom_price.start_date %> at√© <%= r.custom_price.end_date %>
        </dd>
        <dd>
          $<%= r.custom_price.daily_price %>
        </dd>
      </dl>
    </div>
  </div>
<% end %>