<%= form_with model: @room do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>    
  </div> 
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>    
  </div> 
  <div>
    <%= f.label :maximum_guests, 'Maximum Guests' %>
    <%= f.number_field :maximum_guests %>    
  </div> 
  <div>
    <%= f.label :dimension %>
    <%= f.text_field :dimension %>    
  </div> 
  <div>
    <%= f.label :daily_price, 'Normal Price' %> $
    <%= f.text_field :daily_price %>
  </div> 
  <div>
    <%= f.label :status %>
    <%= f.select :status, ['Disponível', 'Indisponível'] %>
  </div>

  <%= f.fields_for :custom_price, f.object.custom_price || CustomPrice.new do |cp| %>
    <div>
      <%= cp.label :daily_price, 'Custom Price' %> $
      <%= cp.text_field :daily_price %>    
    
      <%= cp.label :start_date, 'Start Date' %>
      <%= cp.date_field :start_date %>    
    
      <%= cp.label :end_date, 'End Date' %>
      <%= cp.date_field :end_date %>    
    </div> 
  <% end %>

  <%= f.label :amenity_ids, 'Amenities' %>
  <%= f.collection_check_boxes :amenity_ids, Amenity.all, :id, :name %>

  <div>
    <p><%= f.submit 'Send' %></p>
  </div>
<% end %>

